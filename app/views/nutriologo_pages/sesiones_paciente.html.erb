          <th><p>Sesión <%=numS%></p></th>
              <% numS+=1%>
            <%end
           end %>
           <th colspan="11"></th>
        </thead>
        <tbody>
        <tr>
          <td><p>Peso</p></td>
        <% @sesions.each do |sesion| %>
            <td><p><%= sesion.peso %></p></td>
        <% end %>
      </tr>
      <tr>
        <td><p>Estatura</p></td>
      <% @sesions.each do |sesion| %>
          <td><p><%= sesion.estatura %></p></td>
      <% end %>
    </tr>
    <tr>
      <td><p>Grasa</p></td>
    <% @sesions.each do |sesion| %>
        <td><p><%= sesion.grasa %></p></td>
    <% end %>
