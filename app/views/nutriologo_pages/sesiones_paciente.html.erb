<% end %>


</tr>
<tr>
  <td><p>Datos</p></td>
<% @sesions.each do |sesion| %>
    <td style="padding-top: 9.3px; padding-bottom: 9.3px;">
      <%=link_to 'Editar datos', edit_sesion_path(sesion), class: "col s12 btn btn-primary" %>
    </p></td>
<% end %>


</tr>
<tr>
  <td><p>Citas</p></td>
<% @sesions.each do |sesion| %>
    <td style="padding-top: 9.3px; padding-bottom: 9.3px;">
      <%=link_to 'Ver Metas Cita', "/metas_cita/"+sesion.id.to_s(), class: "col s12 btn btn-primary"%>
    </p></td>
<% end %>


</tr>

  <td><p>Dietas</p></td>
  <td style="padding-top: 9.3px; padding-bottom: 9.3px;">
    <%= link_to 'Dietas', "/dietas_paciente/"+@paciente.to_s(), class: "col s12 btn btn-primary" %>
  </p></td>

