      <td><p><%= sesion.musculo %></p></td>
  <% end %>
</tr>
<tr>
  <td><p>Cintura</p></td>
<% @sesions.each do |sesion| %>
    <td><p><%= sesion.cintura %></p></td>
<% end %>
</tr>
<tr>
  <td><p>IMC</p></td>
<% @sesions.each do |sesion| %>
    <td><p><%= sesion.imc %></p></td>
<% end %>
</tr>
<tr>
  <td><p>Grasa Vis</p></td>
<% @sesions.each do |sesion| %>
    <td><p><%= sesion.grasa_vis %></p></td>
<% end %>
</tr>
<tr>
  <td><p>Edad Metabólica</p></td>
<% @sesions.each do |sesion| %>
