<p id="notice"><%= notice %></p>

<div class="card" style="width: 90%; margin: auto; text-align="center">
<h3>Dietas</h3>

<h4>Agregar dietas</h4>
<% @dieta=Dieta.new%>


  <div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for (@dieta), :url => dieta_path do |f| %>
      <%= f.label :dietaPDF, "Archivo" %>
      <%= f.file_field :dietaPDF %>
      <%= f.hidden_field :paciente_id, :value => @paciente%>

      <%= f.hidden_field :nutriologo_id, :value => current_nutriologo.id%>

      <%= f.submit "Guardar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>



<table>
  <thead>
    <tr>
      <th>Nutriologo</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dietas.each do |dieta| %>
      <tr>
        <td><%= getNutriologoName(dieta.nutriologo_id) %></td>
        <td><%= link_to dieta.dietaPDF.file.filename, dieta.dietaPDF.url %></td>
        <td><%= cl_image_tag(dieta.dietaPDF.file.public_id + ".png",
          :width => 200, :height => 250, :crop => :fill) %> </td>
        <td  style="align:left">
          <div class="row">
            <div class="col s2">
              <%= link_to '<i class="material-icons" style="color: #DC143C;">delete_forever</i>'.html_safe, "/dieta/#{dieta.id}",
                         method: :delete,
                         data: { confirm: '¿Estás seguro?' } %>
            </div>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
