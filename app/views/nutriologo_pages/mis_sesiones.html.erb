<div class="row">
  <div class="col s12">
    <div class="card rounded" style="margin: auto; text-align='center'">
      <div class="card-content">
        <p class="font-size-title">Mis Sesiones</p>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <div class="card rounded" style="margin: auto; text-align='center'">
      <div class="card-content">
  <table>
    <thead>
      <tr>
        <th><p>Paciente</p></th>
        <th><p>Sede</p></th>
        <th><p>Fecha</p></th>
        <th colspan="11"><p></p></th>
      </tr>
    </thead>

    <tbody>
      <% current_nutriologo_sesions.each do |sesion| %>
        <% if sesion.active %>
          <tr>
            <td><p><%= getPacienteName(sesion.paciente_id) %></p></td>
            <td><p><%= getSede(sesion.hora_id) %></p></td>
            <td><p><%= getHora(sesion.hora_id) %></p></td>
            <td style='align:left'>
              <div class="row">
                <div class="col s10">
                  <%= link_to 'Ver Info Paciente', "/sesiones_paciente/"+sesion.paciente_id.to_s(), class: "col s10 btn btn-primary" %>
                </div>
                <% if Time.now > Horario.find(sesion.hora_id).hora_disponible %>
                  <div class="col s2"><i class="material-icons tooltipped col s2" style="color: #ad190a;" data-position="top" data-tooltip="¡Ya paso la fecha de la sesión!">warning</i></div>
                <% else %>
                  <div class="col s2"><i class="material-icons tooltipped col s2" style="visibility: hidden; color: #ff6961;" data-position="top" data-tooltip="¡Ya paso la fecha de la sesión!">warning</i></div>
                <% end %>
              </div>
            </td>
            <td></td>
          </tr>
        <% end %>
      <% end %>

      <% current_nutriologo_sesionss.each do |sesion2| %>
      <% if sesion2.active %>
          <tr>
            <td><p><%= getPacienteName(sesion2.paciente_id) %></p></td>
            <td><p><%= getSede(sesion2.hora_id) %></p></td>
            <td><p><%= getHora(sesion2.hora_id) %></p></td>
            <td style='align:left'>
              <div class="row">
                <div class="col s10">
                  <%= link_to 'Ver Info Paciente', "/sesiones_paciente/"+sesion2.paciente_id.to_s(), class: "col s10 btn btn-primary" %>
                </div>
                <% if Time.now > Horario.find(sesion2.hora_id).hora_disponible %>
                  <div class="col s2"><i class="material-icons tooltipped col s2" style="color: #ff6961;" data-position="top" data-tooltip="¡Ya paso la fecha de la sesión!">warning</i></div>
                <% end %>
              </div>
            </td>
            <td></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
      </div>
    </div>
  </div>
</div>
