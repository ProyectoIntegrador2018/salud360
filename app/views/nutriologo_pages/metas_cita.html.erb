<% @paciente_id=Sesion.find(@cita).paciente_id%>
<div class="card" style="width: 90%; margin: auto; text-align="center">
  <h4>Metas Paciente <%=getPacienteName(@paciente_id)%></h4>

<h5>Agrega otra meta</h5>
  <% @nueva_meta = Meta.new %>
    <%= form_for (@nueva_meta) , :url => meta_path  do |f| %>

    <%= f.text_field :meta%>
    <%= f.hidden_field :paciente_id, :value=> @paciente_id  %>
    <%= f.hidden_field :sesions_id, :value=> @cita  %>
    <%= f.submit "Guardar", class: "btn btn-primary" %>

    <% end %>
    <br>
    <br>
    <br>
    <h5>Avance: <%=@porcentaje%>%</h5>
    <div class = "row">
    <div class = "col s10 offset-s0 ">
        <div id="progressbar" class="red lighten-2">
          <div class="determinate green accent-4" style="width: <%= @porcentaje%>%"></div>
      </div>
    </div>
    </div>

  <table>
    <thead>
      <tr>
        <th>Descripcion</th>
        <th>Lograda</th>
        <th colspan="11"></th>
      </tr>
    </thead>

    <tbody>
      <% @metas.each do |meta| %>
        <tr>
          <td><%= meta.meta %></td>
          <%if meta.cumplida%>
          <td class= "green darken-1 btn-block center"> Completada</td>
          <%else%>
          <td class= "red darken-1 btn-block center"> En proceso</td>
          <%end%>

        </tr>
      <% end %>
    </tbody>
  </table>


  <td><%= link_to 'Ver Info Paciente', "/sesiones_paciente/"+@paciente_id.to_s() %></td>



  <br>
                        </div>
