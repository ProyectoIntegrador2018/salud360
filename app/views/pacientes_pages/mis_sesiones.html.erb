<h1>Mis Sesiones</h1>


<%if(current_paciente_sesions.length>0)%>
    <p><%= current_paciente_sesions[0] .peso %></p>
    <p><%= current_paciente_sesions[0] .estatura %></p>
    <p><%= current_paciente_sesions[0] .grasa %></p>
    <p><%= current_paciente_sesions[0] .musculo %></p>
    <p><%= current_paciente_sesions[0] .agua %></p>
    <p><%= current_paciente_sesions[0] .imc %></p>
    <p><%= current_paciente_sesions[0] .grasa_vis %></p>
    <p><%= current_paciente_sesions[0] .edad_metabolica %></p>
    <p><%= getHora(current_paciente_sesions[0] .hora_id) %></p>
<%end%>


<table>
  <thead>
    <tr>
      <th>Numero Sesion</th>
      <th>Peso</th>
      <th>Estatura</th>
      <th>Grasa</th>
      <th>Musculo</th>
      <th>Agua</th>
      <th>IMC</th>
      <th>Grasa Vis</th>
      <th>Edad Metabolica</th>
      <th>Hora</th>
      <th colspan="11"></th>
    </tr>
  </thead>
<% numS=1%>
  <tbody>
    <% current_paciente_sesions.each do |sesion| %>

      <tr>
        <td><%=numS%></td>
        <td><%= sesion.peso %></td>
        <td><%= sesion.estatura %></td>
        <td><%= sesion.grasa %></td>
        <td><%= sesion.musculo %></td>
        <td><%= sesion.agua %></td>
        <td><%= sesion.imc %></td>
        <td><%= sesion.grasa_vis %></td>
        <td><%= sesion.edad_metabolica %></td>
        <td><%= getHora(sesion.hora_id) %></td>

      </tr>
      <% numS+=1%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Sesion', "/pacientes_pages/programarCita" %>
