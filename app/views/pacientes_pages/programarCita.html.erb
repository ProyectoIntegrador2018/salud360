<% @sesion = Sesion.new %>


<h1>Agrega cita</h1>

<div class="row">
<div class="col-md-6 col-md-offset-3">
  <%if horarios_disponibles.length >0%>
  <h3> Elije un horario </h3>
      <%= form_for(@sesion) do |f| %>




        <%
          $a=[]
          horarios_disponibles.each do |horario|

              $a.push( [ horario.hora_disponible.to_s() +" en " +horario.sede + " con "+ getNutriologoName(horario.nutriologo_id), horario.id])
          end


        %>
        <%= f.select :hora_id,$a%>

        <%= f.hidden_field :paciente_id, :value=>current_paciente.id  %>


        <%= f.submit "Guardar", class: "btn btn-primary" %>
      <% end %>
    <%else%>
      <h2>Lo sentimos, pero por ahora no hay horarios disponibles</h2>
    <%end%>
</div>
</div>
