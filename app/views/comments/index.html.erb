<div class="card" style="width: 90%; margin: auto; text-align="center">
	<div class = "row">
    <div class = "col s12 m12 l12">
      <div class="flow-text">
        <table style="font-size: 12pt;">
          <thead>
            <tr>
              <th>Título</th>
              <th>Descripción</th>
              <th colspan="11"></th>
            </tr>
          </thead>
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td><%= comment.title %></td>
                <td><%= comment.description %></td>
                <td class="center">
                  <%= link_to edit_comment_path(comment) do %>
                    <i class="material-icons black-text">create</i>
                  <% end %>
                </td>
                <td class="center">
                  <%= link_to comment_path(comment), method: :delete, data: { confirm: '¿Esta seguro?' } do %>
                    <i class="material-icons red-text">delete</i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="action">
    <%= link_to 'Nuevo Comentario', new_comment_path, class: "waves-effect waves-light btn" %>
  </div>
</div>
