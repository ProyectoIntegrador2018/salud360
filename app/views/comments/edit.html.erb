<div class="card" style="width: 90%; margin: auto; text-align="center">
	<div class = "row">
		<div class = "col">
			<h5>Editar comentario</h5>
			<%= form_for (@comment) do |f| %>
			<%= f.label :title %>
			<%= f.text_field :title %>
			<%= f.label :description %>
			<%= f.text_field :description %>
			<%= f.submit "Actualizar comentario", class: "btn btn-primary" %>
			<% end %>
		</div>
	</div>
</div>
