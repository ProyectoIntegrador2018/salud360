<p id="notice"><%= notice %></p>

<h1>Documentos</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document.each do |document| %>
      <tr>
        <td><%= document.id %></td>
        <td><%= link_to document.asset.file.filename, document.asset.url %></td>
        <td><%= image_tag document.asset.preview.url %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
