<p id="notice"><%= notice %></p>

<div class="card" style="width: 90%; margin: auto; text-align="center">

<h1>Bienvenido al programa...</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document.each do |document| %>
      <tr>
        <td><%= document.id %></td>
        <td><%= link_to document.asset.file.filename, document.asset.url %></td>
        <td><%= cl_image_tag(document.asset.file.public_id + ".png",
          :width => 200, :height => 250, :crop => :fill) %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
                     </div>
