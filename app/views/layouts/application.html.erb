<!DOCTYPE html>
<html>
  <head>
    <title>Salud360</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <% if notice %>
      <script type="text/javascript">
        Materialize.toast('<%= notice %>', 4000)
      </script>
    <% end %>
    <% if alert %>
      <script type="text/javascript">
        Materialize.toast('<%= alert %>', 4000)
      </script>
    <% end %>
    <style type="text/css">
      @media #{$medium-and-down} {
        align: left;
      }
    </style>
      <nav>
        <div class="nav-wrapper grey darken-4">
          <% if paciente_signed_in? %>
          <a href="/pacientes"
               class="brand-logo left">
                <img src="<%= asset_path( 'logo.png' ) %>" height="60px" width="80px"/>
          </a>
          <% else %>
          <a href="/"
               class="brand-logo left">
                <img src="<%= asset_path( 'logo.png' ) %>" height="60px" width="80px"/>
          </a>
          <% end %>

          <!--<a href="" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>-->

          <ul id="nav-mobile" class ="right" style="font-size: 2em;">
            <% if user_signed_in? %>
              <li><a href="/users"><h5>Administración</h5></a></li>
              <li><a href="/users/sign_out" data-method="delete"><h5>Logout</h5></a></li>
            <% end
            if nutriologo_signed_in? %>
              <li><a href="/nutriologo_pages/mis_sesiones"><h5>Mis Sesiones</h5></a></li>
              <li><a href="/nutriologo_pages/mis_pacientes"><h5>Mis Pacientes</h5></a></li>
              <li><a href="/nutriologo_pages/comentarios"><h5>Comentarios</h5></a></li>
              <li><a href="/nutriologos/sign_out" data-method="delete"><h5>Logout</h5></a></li>
            <% end
            if paciente_signed_in? %>
              <li><a href="/pacientes_pages/mis_sesiones"><h5>Mi Perfil</h5></a></li>
              <li><a href="/documents"><h5>Material de Sesiones</h5></a></li>
              <li><a href="/pacientes_pages/programarCita"><h5>Citas</h5></a></li>
              <% if current_paciente.dieta.present? %>
                <li><a><h5><%= link_to 'Mi Dieta', current_paciente.dieta.dietaPDF.url, style: "font-size: 25px;" %></h5></a></li>
              <% else %>
                <li><a href="/pacientes_pages/ver_dietas"><h5>Mi Dieta</h5></a></li>
              <% end %>
              <li><a href="/pacientes_pages/comentarios"><h5>Comentarios</h5></a></li>
              <li><a href="/pacientes/sign_out" data-method="delete"><h5>Logout</h5></a></li>
            <% end %>
          </ul>

        </div>
      </nav>




