            <% else %>
              <li><a href="/pacientes_pages/mis_sesiones"><h5>Mi Perfil</h5></a></li>
              <li><a href="/documents"><h5>Material de Sesiones</h5></a></li>
              <li><a href="/pacientes_pages/programarCita"><h5>Citas</h5></a></li>
              <li><a href="/pacientes/sign_out" data-method="delete"><h5>Logout</h5></a></li>
            <% end %>
          <% end %>
        </ul>

    <%= yield %>
